@model webpro_quiz2.Models.user

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Welcome.cshtml";
}
<head>
    <style>
        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            max-width: unset !important;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
            padding: 6px 80px;
        }

        .center {
            margin-left:auto;
            margin-right:auto;
        }

        .centerInside {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .card {
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-width: 50%;
            align-items: center;
        }
    </style>
</head>


<body style="background-color: #f8fafc;">
    <h2>Login</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }


<div class="form-horizontal jumbotron center" style="border:solid;border-color:black;padding:25px;display:flex;align-items:center;justify-content:center">
    <div class="card">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="width:35vw;display:flex;flex-direction:column;align-items:center">
            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-10", @style = "text-align:left;" })
            <div class="col-md-10 ">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="width:35vw;display:flex;flex-direction:column;align-items:center">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-10", @style = "text-align:left;" })
            <div class="col-md-10 ">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Login" class="btn btn-primary"/>
            </div>
        </div>
    </div>
</div>
    }
    
</body>


